# Database Connection
DB2_HOSTNAME=default_hostname
DB2_PORT=30376
DB2_DATABASE=default_database

# Authentication
DB2_AUTH_TYPE=password  # Replace with the appropriate auth type. Currently, only 'password' is supported.
DB2_UID=default_username
DB2_PWD=default_password

# TLS/SSL Configuration
DB2_USE_TLS=false
DB2_SSL_CERT_PATH=/certs/DigiCertGlobalRoot.crt  # Provide the full path to the SSL certificate

# Retry and Reconnect Settings
DB2_MAX_RECONNECT_ATTEMPTS=3
DB2_RECONNECT_INTERVAL=5000  # In milliseconds

# Caching Configuration
DB2_CACHE_ENABLED=true
DB2_CACHE_STORE=memory  # Options: 'memory', 'redis'

# Migration Settings
DB2_MIGRATION_ENABLED=false
DB2_MIGRATION_RUN_ON_START=false
DB2_MIGRATION_LOG_QUERIES=false
DB2_MIGRATION_LOG_ERRORS=false
DB2_MIGRATION_DRY_RUN=false
DB2_MIGRATION_SKIP_ON_FAIL=false
DB2_MIGRATION_IGNORE_MISSING=false
DB2_MIGRATION_IGNORE_EXECUTED=false
DB2_MIGRATION_IGNORE_ERRORS=false
DB2_MIGRATION_MARK_AS_EXECUTED=false

# Logging Settings
DB2_LOG_QUERIES=false
DB2_LOG_ERRORS=true
DB2_PROFILE_SQL=false
